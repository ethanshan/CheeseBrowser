<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.codingpark.cheesebrowser.BrowserActivity" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <Button
                android:id="@+id/reboot_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reboot_button" />

        <Button
                android:id="@+id/disable_display_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disable_display_button" />

        <Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_button" />

        <Button
                android:id="@+id/start_server_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启服务" />

        <Button
                android:id="@+id/stop_server_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭服务" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/test_button" />

        <Button
            android:id="@+id/show_delay_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_delay_button" />

        <Button
            android:id="@+id/help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_button" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <TextView
                android:id="@+id/homepage_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/homepage_text_view_string" />

        <Button
                android:id="@+id/homepage_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_button" />

    </LinearLayout>


    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

            <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textClock"
                    android:typeface="normal"
                    android:format24Hour="yyyy-MM-dd hh:mm, EEEE"
                    android:textColor="#a2ff4c"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
        </TableRow>
        <!-- Monday -->
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/monday_string"
                    android:layout_marginRight="0dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/startup_time_text_view_string"
                    android:layout_marginRight="20dp"/>
            <Button
                    android:id="@+id/mon_set_startup_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:30"
                    android:layout_marginRight="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/shutdown_time_text_view_string"
                    android:id="@+id/textView"
                    android:layout_marginRight="20dp"/>
            <Button
                    android:id="@+id/mon_set_shutdown_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:30"
                    android:layout_marginRight="20dp"/>

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/single_enable_checkout_string"
                    android:id="@+id/mon_enable_checkbox"/>

        </TableRow>

        <!-- Tuesday -->
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
